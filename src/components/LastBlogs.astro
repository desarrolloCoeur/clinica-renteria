---
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---
<h2 class="text-4xl mb-5">Nuestras ultimas noticias</h2>
<div class="grid sm:grid-cols-2 md:grid-cols-3 gap-5">
    
    {
        posts.map((post) => (
        <article class="relative overflow-hidden rounded-lg w-full">
            <img width={720} height={360} src={post.data.heroImage} alt=""  class="absolute inset-0 h-full w-full object-cover"  />
            
            <div class="relative bg-gradient-to-t from-gray-900/50 to-gray-900/25 pt-32 sm:pt-48 lg:pt-64 h-full">
                <div class="p-4 sm:p-6">
                    
                    <a href={`/blog/${post.slug}/`}>
                        <h3 class="mt-0.5 text-lg text-white">
                            {post.data.title}
                        </h3>
                    </a>
                    <p class="mt-2 line-clamp-3 text-sm/relaxed text-white/95">
                        {post.data.description}
                    </p>
                    <p class="mt-10 text-white">
                        <FormattedDate date={post.data.pubDate} />
                    </p>
                </div>
            </div>
            </article>
        ))
    }
</div>